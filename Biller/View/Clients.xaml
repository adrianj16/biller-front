        <TextBox x:Name="Document" HorizontalAlignment="Left" Height="23" Margin="61,47,0,0" TextWrapping="Wrap" Text="Document" VerticalAlignment="Top" Width="151"/>
        <ComboBox x:Name="TypeClient"  HorizontalAlignment="Left" Margin="18,39,0,0" VerticalAlignment="Top" Width="32" RenderTransformOrigin="0.655,0.756"/>
        <ComboBox x:Name="TypeDocument"  HorizontalAlignment="Left" Margin="18,168,0,0" VerticalAlignment="Top" Width="156" RenderTransformOrigin="0.655,0.756"/>
        <Button Click="Create_BTN_Click" Content="Create" HorizontalAlignment="Left" Margin="16,220,0,0" VerticalAlignment="Top" Width="162"/>

    </Grid>
</UserControl>
